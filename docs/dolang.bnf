<stmt>          ::= <let_stmt>
                  | <import_stmt>
                  | <expr_stmt>
<let_stmt>      ::= "let" <id> "=" <expr>
<import_stmt>   ::= "import" <id>
<expr_stmt>     ::= <expr>

<expr>  ::= <lambda_expr>
          | <if_expr>
          | <match_expr>
          | <pipe_expr>

<lambda_expr>   ::= fn "_" "->" <expr>
                  | fn <params> "->" <expr>
<params>        ::= <expr> { "," <expr> }

<if_expr>   ::= "if" <expr> "then" <expr> "else" <expr>

<match_expr>    ::= "match" <expr> { "|" <pattern> "->" <expr> }
<pattern>       ::= <literal>
                  | <identifier>
                  | "(" <pattern> { "," <pattern> } ")"
                  | "_"

<list>  ::= "[" [ <expr> { "," <expr> } ] "]"

<pipe_expr>     ::= <logic_expr> { "|>" <logic_expr> }
<logic_expr>    ::= <comp_expr> { ("and" | "or") <comp_expr> }
<comp_expr>     ::= <range_expr> { ("is" | "is not" | "<" | "<=" | ">" | ">=" | "in") <range_expr> }
<range_expr>    ::= <term_expr> { ".." <term_expr> }
<term_expr>     ::= <factor_expr> { ("+" | "-") <factor_expr> }
<factor_expr>   ::= <unary_expr> { ("*" | "/" | "%") <unary_expr> }
<unary_expr>    ::= ( "-" | "not") <unary_expr>
                  | <postfix_expr>
<postfix_expr>  ::= <primary> { <postfix> }

<postfix>   ::= <call>
              | <index>
              | <slice>
              | <access>
<access>    ::= "." <identifier>

<call>  ::= "(" [ <expr> { "," <expr> } ] ")"
<index> ::= "[" <expr> "]"
<slice> ::= "[" [<expr>] ".." [<expr>] "]"
<access>::=

<primary>   ::= <identifier>
              | <literal>
              | <list>
              | <record>
              | "(" <expr> ")"

<identifier>    ::= ( <letter> | "_" ) { <letter> | <digit> | "_" }
<literal>       ::= <number>
                  | <string>
                  | "true"
                  | "false"
<list>          ::= "[" [ <expr> { "," <expr> } ] "]"
<record>        ::= "{" [ <field> { "," <field> } ] "}"
<field>         ::= <identifier> ":" <expr>
